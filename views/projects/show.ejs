<% locals.breadcrumbs = [
    {name: 'Home', link: '/'},
    {name: project.group.name, link: `/browse/${project.group.safeName}`},
    {name: project.name, active: true}
]; %>
<% include ../head.ejs %>
<div class="container">

    <h1 class="title has-text-centered"><%- project.name %></h1>
    <% const HPCPath = `${locals.config.HPCRoot}/${project.group.safeName}/${project.safeName}` %>
    <% include ../_hpc_path.ejs %>
    <hr>
    <h2 class="subtitle has-text-centered is-4">Short Description</h2>
    <p><%- project.shortDescription %></p>
    <br>
    <h2 class="subtitle has-text-centered is-4">Long Description</h2>
    <p><%- project.longDescription %></p>

    <hr>
    <h2 class="subtitle has-text-centered is-4">Samples</h2>

    <div class="section">
        <a href="/browse/<%- project.group.safeName %>/<%- project.safeName %>/new" class="button is-success">New
            Sample</a>
    </div>


    <div class="columns">
        <% project.samples.map((sample, exampleIndex)=>{ %>

            <% if (exampleIndex !== 0 && exampleIndex % 3 == 0){ %>
                <%- '</div>' %>
                <%- '<div class= "columns" >' %>
            <% } %>

            <div class="column is-one-third">
                <div class="card is-rounded">
                    <div class="card-content">

                        <div class="media">
                            <div class="media-content">
                                <p class="title is-4"><%- sample.name %></p>

                            </div>
                        </div>
                        <div class="content">
                            <p><%- sample.safeName %></p>
                            <a class="button is-link is-outlined"
                               href="/browse/<%- project.group.safeName %>/<%- project.safeName %>/<%- sample.safeName %>">View
                                Sample</a>
                        </div>

                    </div>
                </div>
            </div>

        <% }) %>
    </div>

</div>
<% include ../foot.ejs %>